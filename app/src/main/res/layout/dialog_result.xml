<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="400dp"
              android:layout_height="260dp"
              android:background="#2bd0d8"
              android:orientation="vertical"
              android:weightSum="1">
    
    <ImageView
        android:id="@+id/dialog_close"
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:src="@mipmap/dialog_close"
        android:layout_gravity="top|right"
        android:padding="10dp"
        android:layout_weight="0.20"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:text="@string/accept_video"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:id="@+id/tv_message"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/dialog_no"
            android:id="@+id/dialog_no"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/dialog_yes"
            android:layout_marginLeft="25dp"
            android:id="@+id/dialog_yes"/>

    </LinearLayout>

</LinearLayout>