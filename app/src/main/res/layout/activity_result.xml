<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_result"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tip_msg"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/result_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/result_iv_1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@mipmap/t_1001"/>

                    <TextView
                        android:id="@+id/result_department_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="皮肤科"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_percent_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@mipmap/percent_bg_1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="98.2%"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_doctor1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/ic_meinv">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@mipmap/ic_person"
                    />

                <TextView
                    android:id="@+id/tv_doctor_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/result_left_bottom"
                    android:gravity="left|center_vertical"
                    android:text="韩梅梅"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/result_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/result_iv_2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@mipmap/t_1001"/>

                    <TextView
                        android:id="@+id/result_department_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="皮肤科"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_percent_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@mipmap/percent_bg_1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="98.2%"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_doctor2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/ic_meinv">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@mipmap/ic_person"
                    />

                <TextView
                    android:id="@+id/tv_doctor_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/result_left_bottom"
                    android:gravity="left|center_vertical"
                    android:text="韩梅梅"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/result_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/result_iv_3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@mipmap/t_1001"/>

                    <TextView
                        android:id="@+id/result_department_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="皮肤科"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_percent_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@mipmap/percent_bg_1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="98.2%"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_doctor3"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/ic_meinv">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@mipmap/ic_person"
                    />

                <TextView
                    android:id="@+id/tv_doctor_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/result_left_bottom"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="韩梅梅"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
